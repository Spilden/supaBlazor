<div style="margin: 10px;">
    <h3>Completed todo list</h3>
    <ul class="list-group list-group-flush">
        @foreach (var todo in CompletedTodos)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@todo.Title</span>
                <div class="d-flex gap-2">
                    <button class="btn btn-warning btn-sm" @onclick="() => HandleUndo(todo)">
                        Undo
                    </button>
                </div>
            </li>
        }
    </ul>
</div>

@code {
    [Parameter]
    public List<NewTodo.TodoItem> CompletedTodos { get; set; } = new();

    [Parameter]
    public EventCallback<NewTodo.TodoItem> OnUndoComplete { get; set; }

    private async Task HandleUndo(NewTodo.TodoItem todo)
    {
        await OnUndoComplete.InvokeAsync(todo);
    }
}